{
  "$schema": "https://opencode.ai/config.json",

  // ==================== Vibe MCPs (OpenCode) ====================
  // 说明：这是一个“可复制示例文件”，你可以把其中的 `mcp` 段落合并进目标项目的 `opencode.jsonc` 或全局 `~/.config/opencode/opencode.json`。
  // 参考：https://opencode.ai/docs/mcp-servers/

  "mcp": {
    // --- 本地（stdio）---
    "augment-context-engine": {
      "type": "local",
      "command": ["auggie", "--mcp"],
      "enabled": true,
      "timeout": 5000
    },

    "mcp-deepwiki": {
      "type": "local",
      "command": ["npx", "-y", "mcp-deepwiki@latest"],
      "enabled": false,
      "timeout": 5000
    },

    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest"],
      "enabled": false,
      "timeout": 5000
    },

    "sequential-thinking": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-sequential-thinking"],
      "enabled": false,
      "timeout": 5000
    },

    // --- 远程（HTTP）---
    // Context7 官方文档示例为 remote MCP：
    // https://opencode.ai/docs/mcp-servers/#context7
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": false,
      "timeout": 5000

      // 如果你有 Context7 API Key，可启用更高配额（可选）：
      // "headers": {
      //   "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      // }
    }
  }
}
